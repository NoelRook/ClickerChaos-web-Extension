{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Blocks specific websites to help you stay focused.",
    "permissions": ["declarativeNetRequest", "storage"],
    "host_permissions": ["*://*/*"],
    "options_page": "index.html",
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "action":{
        "default_popup": "index.html",
        "default_title": "Productivity Mode"
    }
    
  }
  